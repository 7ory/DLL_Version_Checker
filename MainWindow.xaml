<Window x:Class="DLL_Version_Checker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Version Checker" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ListBox x:Name="libraryList" Grid.Row="0" />
        <Button x:Name="checkButton" Grid.Row="1" Content="Check Libraries" Click="checkButton_Click" />
    </Grid>
</Window>
